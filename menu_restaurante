#include <stdio.h>

int main(){

int n1, n2;

  printf("Olá, seja bem vindo(a)\n");
  printf("Voce e: cliente (1) funcionario (a) (2)?\nPara a opcao desejada, digite o numero correspondente: ");
  scanf("%d", &n1);
  while (n1 != 2 && n1 != 1){ // Se o usuario nao escolher uma opçao valida, vai continuar pedindo uma opcao valida (loop)
    printf("Comando invalido\n");
    printf("Voce e: cliente (1) funcionario (a) (2)?\nPara a opcao desejada, digite o numero correspondente: ");
    scanf("%d", &n1);
} if (n1 == 1){
        printf("Seja bem vindo cliente!"); // Caso seja cliente, entrara no menu do cliente
    } else if (n1 == 2){
        int senha = 0;
        printf("Digite a senha: "); // Caso seja funcionario, pede a senha
        scanf("%d", &senha);
        while (senha != 321){ // loop ate acertar a senha
            printf("Senha incorreta, digite a senha novamente: ");
            scanf("%d", &senha);
        } if (senha == 321){
            printf("Visualizar cardapio (1) Gerar Relatorio (2): "); // Senha correta, o funcionario tera dois caminhos para escolher
            scanf("%d", &n2);
            if (n2 == 1){
                printf("'''Arquivo binario'''"); // Aqui entrara no arquivo binario do cardapio
            } else if (n2 == 2){
                int n3;
                printf("Gerar relatorio (1) Sair (2): ");
                scanf("%d", &n3);
                if (n3 == 1){
                    printf("Gerar relatorio"); // Funcao gerar relatorio
                } else if (n3 == 2){
                    printf("Funcao encerrada"); // Encerra o programa
                }

            }
        }
         
    } 

    
return 0;
}

